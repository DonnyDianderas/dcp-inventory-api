          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/movements/": {
      "post": {
        "tags": [
          "Movements"
        ],
        "description": "  Create an inventory movement.<br><br>  • <b>IN</b>: Adds stock.<br>  • <b>OUT</b>: Removes stock and validates available quantity.<br><br>  ",
        "parameters": [
          {
            "name": "Movement",
            "in": "body",
            "required": true,
            "description": "Movement details to register",
            "schema": {
              "type": "object",
              "properties": {
                "product_id": {
                  "type": "string",
                  "example": "001-0001"
                },
                "type": {
                  "type": "string",
                  "example": "IN"
                },
                "quantity": {
                  "type": "number",
                  "example": 100
                },
                "notes": {
                  "type": "string",
                  "example": "Optional notes"
                }
              }
            },
            "example": {
              "product_id": "001-0001",
              "type": "IN",
              "quantity": 50,
              "notes": "Received new stock"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
