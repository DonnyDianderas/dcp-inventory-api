          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB _id of the movement",
            "example": "69219684a3c23c6f83c18dbl"
          },
          {
            "name": "Movement",
            "in": "body",
            "description": "Fields to update",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "product_id": {
                  "type": "string",
                  "example": "001-0001"
                },
                "type": {
                  "type": "string",
                  "example": "IN"
                },
                "quantity": {
                  "type": "number",
                  "example": 50
                },
                "notes": {
                  "type": "string",
                  "example": "Updated notes"
                }
              }
            }
          }
